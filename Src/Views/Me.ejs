<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ghost</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">Ghost</a>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-link" aria-current="page" href="/">Home</a>
              <a class="nav-link" href="/auth/register">Sign up</a>
              <a class="nav-link active" href="/me/posts">My Posts</a>
            </div>
          </div>
        </div>
      </nav>

      <div class="container">
          <h2>My Posts</h2>
          <a href="/posts/create"><div class="btn btn-primary">Create Post</div></a>
          <% if (data.length == 0) { %>
            <div>Ban chua co bai viet nao a</div>
          <% } else { %>
            <table class="table">
            <thead>
              <tr>
                <th scope="col">STT</th>
                <th scope="col">Title</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
                <% data.forEach((post, index )=> { %>
                    <tr>
                        <th scope="row"><%= index+1 %> </th>
                        <td><%= post.title %> </td>
                        <td><a href="/posts/edit/<%= post._id %> "> <div class="btn btn-primary">Edit</div></a></td>
                        <td><form action="/posts/<%= post._id %>?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                          
                    </tr>
                <% }) %>
              
            </tbody>
          </table>
           <% } %> 
        
      </div>

</body>
</html>